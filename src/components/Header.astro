---
import {Image} from "astro:assets"
const base = import.meta.env.BASE_URL;

// Importing Astro's built-in Image component for optimized image handling (automatic resizing, formats, lazy loading, etc.).
// This is the top navigation bar that appears on every page using the Layout.astro.
// Links point to main pages of  site.
---

<header
    class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto">
    
    <a href="/" class="flex gap-x-4 items-center">
        <Image
            src="/heartbeat.png"
            alt="rhythm nation logo"
            width={60}
            height={60}
            format="webp"
            class="rounded-2xl aspect-thumbnail object-cover"
        />

        <p class="uppercase text-3xl text-zinc-900">blog</p>
    </a>
    <ul class="flex gap-x-8">
        <li><a href={base} class="text-teal-900 font-bold">Home</a></li>
        <li><a href={`${base}about/`} class="text-teal-900 font-bold">About</a></li>
        <li><a href={`${base}blog/`} class="text-teal-900 font-bold">Blog</a></li>
      </ul>
</header>
